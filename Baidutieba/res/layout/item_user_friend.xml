<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="2dp"
        android:textSize="12sp"
        android:textColor="#000000" 
        />
    <View
        android:id="@+id/aline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_1"
        android:layout_below="@id/alpha"
        android:background="@drawable/base_horizontal_line" >
    </View>

    <ImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="42.0dip"
        android:layout_height="42.0dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha"
        android:layout_marginTop="2.0dip"
        android:padding="5dp"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/tv_friend_name"
        style="@style/Smile.TextView._Black"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2.0dip"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:singleLine="true"
        android:textSize="14sp" />

</RelativeLayout>