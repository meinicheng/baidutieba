<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#262B4D"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button"
            android:padding="10dp"
            android:src="@drawable/btn_actionbar_back" />

        <TextView
            android:id="@+id/lnametv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="创建贴吧"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cread_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="龙绍华"
                android:textColor="#3385FF"
                android:textSize="16sp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吧尚未建立"
                android:textSize="16sp"
                android:textColor="#C0C0C0" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="请填写以下内容创建贴吧" 
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_1"
            android:background="@drawable/base_horizontal_line"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贴吧名称:"
            android:textSize="14sp" 
            />
        <EditText 
            android:id="@+id/cread_edit"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无聊吧"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/bb_edit_loding_button"
            android:textSize="17dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:textColor="#C0C0C0"
            android:text="不超过31个汉字，限文字、字母、数字、和下划线，不能与已有贴吧名称重复。"
            />
      	<Button
            android:id="@+id/bt_creadtieba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_selector"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="创建贴吧"
            android:textColor="#ffffff"
            android:textSize="15dp"
             /> 
    </LinearLayout>

</LinearLayout>